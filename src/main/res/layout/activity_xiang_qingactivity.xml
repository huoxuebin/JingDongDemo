<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jingdongdeom.Activity.XiangQingactivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <ImageView
        android:id="@+id/back2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/leftjiantou"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="详情"
        android:textSize="25dp"
        android:textColor="#f00"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>

        <com.youth.banner.Banner
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:id="@+id/viewpager"
            ></com.youth.banner.Banner>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11"
        android:id="@+id/xqtitle"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11"
        android:textColor="#f00"
        android:id="@+id/xqprice"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11"
        android:textColor="#f00"
        android:id="@+id/yhprice"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:background="#f898">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:text="联系客服"
            android:background="#f89"
          />
        <Button
            android:onClick="addshop"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="加入购物车"
            android:background="#f00"
            />
    </LinearLayout>


</LinearLayout>
